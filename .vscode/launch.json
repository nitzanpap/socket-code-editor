    "version": "0.2.0",
    "configurations": [
        {
            // cd into ./server and run npm run dev
            "type": "node",
            "request": "launch",
            "name": "Server Debug",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
        },
        {
            // cd into ./client and run npm run dev
            "type": "node",
            "request": "launch",
            "name": "Client Debug",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
        }
    ]
}
